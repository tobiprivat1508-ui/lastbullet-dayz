---
const navItems = [
  { label: 'Ãœber uns', href: '/#about' },
  { label: 'Features', href: '/#features' },
  { label: 'Regeln', href: '/regeln' },
  { label: 'Livemap', href: '/livemap' },
  { label: 'Kontakt', href: '/#contact' },
];
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <nav class="bg-black/90 backdrop-blur-md border-b border-white/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3 group shrink-0">
          <img src="/images/logo.png" alt="Last Bullet" class="w-10 h-10 rounded-lg object-cover group-hover:scale-110 transition-transform" />
          <span class="font-bold text-lg tracking-wider hidden sm:block">LAST BULLET</span>
        </a>

        <!-- Desktop Nav -->
        <div class="hidden md:flex items-center gap-1">
          {navItems.map((item) => (
            <a
              href={item.href}
              class="px-4 py-2 text-sm text-text-secondary hover:text-text-primary hover:bg-white/5 rounded-lg transition-all duration-200"
            >
              {item.label}
            </a>
          ))}
        </div>

        <!-- Actions -->
        <div class="flex items-center gap-3">
          <!-- Mobile menu button -->
          <button
            id="mobile-menu-btn"
            class="md:hidden p-2 text-text-secondary hover:text-text-primary rounded-lg hover:bg-white/5 transition-colors"
            aria-label="Menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Mobile Nav -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-white/5 bg-black/95">
      <div class="px-4 py-3 space-y-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="block px-4 py-2 text-sm text-text-secondary hover:text-text-primary hover:bg-white/5 rounded-lg transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });

  // Header scroll effect
  const header = document.getElementById('header');
  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    if (header) {
      if (currentScroll > 50) {
        header.classList.add('shadow-lg', 'shadow-black/50');
      } else {
        header.classList.remove('shadow-lg', 'shadow-black/50');
      }
    }
  });
</script>
