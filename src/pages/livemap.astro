---
import BaseLayout from '../layouts/BaseLayout.astro';
import LiveMap from '../components/LiveMap.tsx';
---

<BaseLayout title="Livemap - LAST BULLET DayZ" description="Interaktive Livemap von LAST BULLET DayZ. Erkunde die Chernarus-Karte mit Spielerpositionen und Points of Interest." keywords="DayZ Livemap, Chernarus Map, DayZ Karte, Last Bullet, iZurvive">
  <div class="pt-24 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4">Livemap</h1>
        <p class="text-text-secondary text-lg">Interaktive Karte von Chernarus</p>
        <div class="w-20 h-1 bg-accent mx-auto mt-6 rounded-full" />
      </div>
      <LiveMap client:load />
    </div>
  </div>
</BaseLayout>
